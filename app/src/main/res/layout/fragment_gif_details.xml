<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#87caf2"
    android:layout_height="match_parent"
    tools:context=".view.FragmentGifDetails">

    <Button
        android:layout_width="100dp"
        android:id="@+id/id_button_detail"
        android:text="назад"
        android:backgroundTint="#000000"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_height="50dp"/>
    <ImageView
        android:layout_width="350dp"
        android:id="@+id/id_imageview_details"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_height="350dp"/>

    <TextView
        android:id="@+id/id_date_detail"
        android:layout_width="200dp"
        android:layout_height="51dp"
        android:layout_marginLeft="181dp"
        android:gravity="center"
        android:hint="дата"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <TextView
        android:layout_width="350dp"
        android:hint="заголовок"
        android:textStyle="italic"
        android:textSize="30dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:id="@+id/id_title_details"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_height="70dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_width="100dp"
        android:id="@+id/id_imageview_user_details"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_height="100dp"/>
    <TextView
        android:layout_width="240dp"
        android:textColor="@color/black"
        android:hint="username"
        android:textSize="20dp"
        android:gravity="center"
        android:id="@+id/id_username_details"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="40dp"/>

    </LinearLayout>

</LinearLayout>